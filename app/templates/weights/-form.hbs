<div class="form">
  <fieldset>
      <legend>{{#if action_add}}Add{{else}}Edit{{/if}} Weight</legend>
    <form>
      <div class="form-group">
        <label for="date">Date</label>
        {{jqui-datepicker  class="form-control" readonly="readonly"
          dateFormat="MM d, yy" value=model.formatted_date}}
        {{#if errors.date}}
            <div class="error clear">{{errors.date}}</div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="date">Weight(kg)</label>
        {{input class="form-control" placeholder="Enter weight"
          autocomplete="off" type="text"
          value=model.weight}}
        {{#if errors.weight}}
          <div class="error clear">{{errors.weight}}</div>
        {{/if}}
      </div>
    </form>
    <div class="pull-right">
      <button type="button" class="btn btn-default"
        {{action "cancel" on="click"}}>
          Cancel
      </button>
      {{#if action_edit}}
        <button type="button" class="btn btn-primary"
          {{action "save" on="click"}}>
            Edit
        </button>
      {{else}}
        <button type="button" class="btn btn-primary"
          {{action "save" on="click"}}>
            Add
        </button>
      {{/if}}
    </div>
  </fieldset>
</div>

