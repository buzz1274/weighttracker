<div id="myModal"
  {{bind-attr class=":modal :fade :in showAddEditWeight:show:hide"}}>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" aria-hidden="true"
          {{action "closeWeightModal" on="click"}}>
            &times;
        </button>
        <h4 class="modal-title">
            {{#if weight}}
              Edit Weight
            {{else}}
              Add Weight
            {{/if}}
        </h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="date">Date</label>
            {{jqui-datepicker  class="form-control" readonly="readonly"
              dateFormat="d MM, yy"
              value=weight.formatted_date}}
          </div>
          <div class="form-group">
            <label for="date">Weight(Kg)</label>
            {{input class="form-control" placeholder="Enter weight"
                    autocomplete="off" type="text"
                    value=weight.formatted_weight}}
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default"
          {{action "closeWeightModal" on="click"}}>
            Close
        </button>
        {{#if weight}}
          <button type="button" class="btn btn-danger"
            {{action "deleteWeight" on="click"}}>
              Delete
          </button>
        {{/if}}
        <button type="button" class="btn btn-primary"
          {{action "saveWeight" on="click"}}>
            Save
        </button>
      </div>
    </div>
  </div>
</div>