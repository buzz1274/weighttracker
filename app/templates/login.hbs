<div class="form">
    <fieldset>
        <legend>Login</legend>
        <form method="POST" action="/login">
            <div class="form-group ">
                <label class="control-label" for="id_username">
                    Username:
                </label>
                <input autocomplete="off" class="form-control form-large"
                       id="id_username" name="username" type="text">
            </div>
            <div class="form-group ">
                <label class="control-label" for="id_password">
                    Password:
                </label>
                <input autocomplete="off" class="form-control form-large"
                       id="id_password" name="password" type="password">

            </div>
            <span class="pull-right">
              {{#link-to 'register'}}Register{{/link-to}}
            </span>
            <input name="submit" type="submit" value="Login">
            {{#if login_error}}
              <p class="text-danger form-warning">
                  <strong>
                      You have entered an invalid username and/or
                      password.
                  </strong>
              </p>
            {{/if}}
        </form>
    </fieldset>
</div>