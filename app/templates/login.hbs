<div class="form">
  <fieldset>
    <legend>Login</legend>
    <div class="form-group ">
      <label class="control-label" for="id_username">
        Username:
      </label>
      {{input class="form-control form-large" autocomplete="off"
              id="id_username" value=username}}
    </div>
    <div class="form-group ">
      <label class="control-label" for="id_password">
        Password:
      </label>
      {{input class="form-control form-large" autocomplete="off"
              id="id_password" type="password" value=password}}
    </div>
    {{#if login_error}}
      <p class="text-danger"><strong>{{login_error}}</strong></p>
    {{/if}}
    <span class="pull-right">
      {{#link-to 'index'}}
        <button type="button" class="btn btn-default">
          Cancel
        </button>
      {{/link-to}}
      {{#link-to 'register'}}
        <button type="button" class="btn btn-default">
          Register
        </button>
      {{/link-to}}
      <button type="button" class="btn btn-primary"
        {{action "authenticate" on="click"}}>
          Login
      </button>
    </span>
  </fieldset>
</div>