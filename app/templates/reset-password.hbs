<div class="form">
  <fieldset>
    <legend>Reset Password</legend>
    <div class="form-group ">
      <label class="control-label" for="id_username">
        Email:
      </label>
      {{input class="form-control form-large" autocomplete="off"
        id="id_email" value=email}}
    </div>
    <span class="pull-right">
      {{#link-to 'index' class="button"}}
        <button type="button" class="btn btn-default">
          Cancel
        </button>
      {{/link-to}}
      <button type="button" class="btn btn-primary"
        {{action "authenticate" on="click"}}>
          Reset
      </button>
    </span>
  </fieldset>
</div>