<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
    <link rel="icon" sizes="16x16"
          href="{{ asset('bundles/weighttracker/images/favicon.ico') }}" />
    {% block stylesheets %}
        {%  stylesheets
            '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css'
            '@weighttrackerBundle/Resources/public/css/styles.css'
            filter='uglifycss'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {%  endstylesheets %}
    {%  endblock %}
    {% block head %}{% endblock %}
</head>
<body>
    {% block body %}{% endblock %}
    {% block javascripts %}
        {% javascripts
            '@weighttrackerBundle/Resources/public/js/libs/jquery-1.10.2.js'
            '@weighttrackerBundle/Resources/public/js/libs/handlebars-1.1.2.js'
            '@weighttrackerBundle/Resources/public/js/libs/ember-1.5.1.js'
            '//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js'
            '@weighttrackerBundle/Resources/public/js/app.js'
            filter='uglifyjs2'
        %}
            <script type="text/javascript" src="{{asset_url}}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>