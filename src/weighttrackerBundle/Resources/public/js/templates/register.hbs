<div id="register" class="modal fade" tabindex="-1"
     role="dialog" aria-labelledby="registerModal" aria-hidden="true">
    <div class="modal-dialog">
        <form role="form" {{action "register" on="submit"}}>
            <div class="modal-content">
                <div class="modal-header">
                    Register
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="email">Email</label>
                        {{view Ember.TextField valueBinding="email" id="emaiL" type="text"
                                class="form-control" autocomplete="off"}}
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input id="password" type="password"
                               class="form-control" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="password_again">Password(again)</label>
                        <input id="password_again" type="password"
                               class="form-control" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="date_of_birth">Date of Birth</label>
                        <input id="date_of_birth" type="text"
                               class="form-control" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="sex">Sex</label>
                        <select id="sex" class="form-control">
                            <option value="-">Please Select...</option>
                            <option value="female">Female</option>
                            <option value="male">Male</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="height">Height(m)</label>
                        <input id="height" type="text" class="form-control"
                               autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="weight">Weight(kg)</label>
                        <input id="weight" type="text" class="form-control"
                               autocomplete="off">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn" id="create_account">
                        Register
                    </button>
                    <button type="cancel" class="btn"
                            data-dismiss="modal" data-target="#register"
                            id="cancel_create_account">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>