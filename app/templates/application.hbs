<div class="container-fluid">
    <div id="header">
        <div id="welcome">
            {{#if session.isAuthenticated}}
              Welcome back,
              {{session.secure.name}}&nbsp;
              {{#link-to 'profile' title="Edit User"}}
                <i id="edit_user" class="glyphicon glyphicon-edit"></i>
              {{/link-to}}|&nbsp;
              <a {{action 'invalidateSession'}}>Logout</a>
            {{else}}
              {{#link-to 'login'}}Login{{/link-to}}
            {{/if}}
        </div>
        <div id="header_content">
          <h1>
            {{#if session.isAuthenticated}}
              {{#link-to 'weights'}}WeightTracker{{/link-to}}
            {{else}}
              {{#link-to 'index'}}WeightTracker{{/link-to}}
            {{/if}}
          </h1>
        </div>
    </div>
    <div id="main" class="row-fluid">
        <div id="sub_main">
          {{outlet}}
        </div>
    </div>
    <div id="footer">WeightTracker v0.1</div>
</div>
