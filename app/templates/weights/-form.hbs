<div class="form">
  <fieldset>
    <legend>Add Weight</legend>
    <form>
      <div class="form-group">
        <label for="date">Date</label>
        {{jqui-datepicker  class="form-control" readonly="readonly"
          dateFormat="MM d, yy"
          value=model.formatted_date}}
      </div>
      <div class="form-group">
        <label for="date">Weight(kg)</label>
        {{input class="form-control" placeholder="Enter weight"
          autocomplete="off" type="text"
          value=model.weight}}
      </div>
    </form>
    <div class="pull-right">
      <button type="button" class="btn btn-default"
        {{action "cancel" on="click"}}>
          Cancel
      </button>
      {{#if weight}}
          <button type="button" class="btn btn-danger"
            {{action "deleteWeight" on="click"}}>
              Delete
          </button>
          <button type="button" class="btn btn-primary"
            {{action "editWeight" on="click"}}>
              Edit
          </button>
      {{else}}
          <button type="button" class="btn btn-primary"
            {{action "save" on="click"}}>
              Add
          </button>
      {{/if}}
    </div>
  </fieldset>
</div>

